<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        tools:context=".ui.activity.invoice.InvoiceActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否开据发票" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checkedButton="@id/checkbox"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_flow_tag_bg_rect_round_red"
                android:button="@null"
                android:padding="@dimen/dp_10"
                android:text="不需要发票"
                android:textColor="@drawable/default_flow_tag_text_rect_round_red" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/default_flow_tag_bg_rect_round_red"
                android:button="@null"
                android:padding="@dimen/dp_10"
                android:text="需要并填写发票信息"
                android:textColor="@drawable/default_flow_tag_text_rect_round_red" />
        </RadioGroup>

        <View
            style="@style/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checkedButton="@id/checkbox"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="个人明细" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增发票内容" />

        </RadioGroup>

        <View
            style="@style/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票类型" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checkedButton="@id/checkbox"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--需要并填写发票信息-->
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_flow_tag_bg_rect_round_red"
                    android:button="@null"
                    android:checked="true"
                    android:padding="@dimen/dp_10"
                    android:text="不需要发票"
                    android:textColor="@drawable/default_flow_tag_text_rect_round_red" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/default_flow_tag_bg_rect_round_red"
                    android:button="@null"
                    android:padding="@dimen/dp_10"
                    android:text="需要并填写发票信息"
                    android:textColor="@drawable/default_flow_tag_text_rect_round_red" />
            </RadioGroup>

        </LinearLayout>

        <View
            style="@style/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票抬头" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checkedButton="@id/checkbox"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--需要并填写发票信息-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入个人或企业名称" />
            </RadioGroup>

        </LinearLayout>

        <View
            style="@style/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票内容" />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="输入个人或企业名称" />-->

            <Spinner
                android:id="@+id/spinner_system"
                style="@style/SpinnerStyle"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="?attr/xui_config_content_spacing_vertical"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/shallow_red"
            android:gravity="center"
            android:onClick="certain"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

</layout>