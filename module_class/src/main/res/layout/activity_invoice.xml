<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.trecyclerview.adapter.DelegateAdapter" />

        <variable
            name="listerer"
            type="android.widget.RadioGroup.OnCheckedChangeListener" />

        <!--是否选择发票-->
        <variable
            name="selectInvoice"
            type="Boolean" />

        <!--发票类型-->
        <variable
            name="selectInvoiceType"
            type="Boolean" />

        <variable
            name="content"
            type="String" />

        <variable
            name="list"
            type="java.util.List" />

        <variable
            name="adapter"
            type="DelegateAdapter" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/width_match_height_match"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            tools:context=".ui.activity.invoice.InvoiceActivity">

            <TextView
                style="@style/width_warp_height_warp"
                android:text="是否开据发票"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checkedButton="@id/checkbox"
                android:gravity="center_vertical"
                android:onCheckedChanged="@{listerer}"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/checkbox"
                    style="@style/width_warp_height_warp"
                    android:background="@drawable/default_flow_tag_bg_rect_round_red"
                    android:button="@null"
                    android:checked="@{selectInvoice}"
                    android:padding="@dimen/dp_6"
                    android:text="不需要发票"
                    android:textColor="@drawable/default_flow_tag_text_rect_round_red"
                    android:textSize="@dimen/text_12" />

                <RadioButton
                    style="@style/width_warp_height_warp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/default_flow_tag_bg_rect_round_red"
                    android:button="@null"
                    android:checked="@{!selectInvoice}"
                    android:padding="@dimen/dp_6"
                    android:text="需要并填写发票信息"
                    android:textColor="@drawable/default_flow_tag_text_rect_round_red" />
            </RadioGroup>

            <LinearLayout
                style="@style/width_match_height_warp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:orientation="vertical"
                android:visibility="@{selectInvoice?View.GONE:View.VISIBLE}">

                <!--<com.trecyclerview.TRecyclerView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scrollbars="none"-->
                <!--android:tag="3"-->
                <!--bind:items="@{list}" />-->

                <!--<include  layout="@layout/trecyclerview_base"-->
                <!--bind:items="@{list}"-->
                <!--bind:tag="3"/>-->

                <include
                    layout="@layout/trecyclerview_base"
                    bind:adapter="@{adapter}"
                    bind:data="@{list}"
                    bind:tag="@{`3`}" />

                <TextView
                    style="@style/width_warp_height_warp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="新增发票内容"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <View
                    style="@style/HorizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    style="@style/width_match_height_warp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:text="发票类型" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkedButton="@id/checkbox_invoice"
                        android:gravity="center_vertical"
                        android:onCheckedChanged="@{listerer}"
                        android:orientation="horizontal">
                        <!--需要并填写发票信息-->
                        <RadioButton
                            android:id="@+id/checkbox_invoice"
                            style="@style/width_warp_height_warp"
                            android:background="@drawable/default_flow_tag_bg_rect_round_red"
                            android:button="@null"
                            android:padding="@dimen/dp_6"
                            android:text="个人"
                            android:textColor="@drawable/default_flow_tag_text_rect_round_red"
                            android:textSize="@dimen/text_12" />

                        <RadioButton
                            style="@style/width_warp_height_warp"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@drawable/default_flow_tag_bg_rect_round_red"
                            android:button="@null"
                            android:padding="@dimen/dp_6"
                            android:text="单位"
                            android:textColor="@drawable/default_flow_tag_text_rect_round_red" />
                    </RadioGroup>

                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    style="@style/width_match_height_warp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="@{selectInvoiceType?View.GONE:View.VISIBLE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:text="发票抬头" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkedButton="@id/checkbox"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <!--需要并填写发票信息-->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="输入个人或企业名称"
                            android:text="@{content}" />
                    </RadioGroup>

                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    style="@style/width_match_height_warp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:text="发票内容" />

                    <Spinner
                        android:id="@+id/spinner_system"
                        style="@style/SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="?attr/xui_config_content_spacing_vertical"
                        android:spinnerMode="dialog" />

                </LinearLayout>
            </LinearLayout>

            <Button
                style="@style/width_match_height_warp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_of_red_gradient_radius"
                android:gravity="center"
                android:onClick="certain"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>