<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="价格区间"
                    android:textSize="@dimen/text_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--areaId, priceFrom, priceTo-->
                    <EditText
                        android:id="@+id/et_price_from"
                        style="@style/TextStyle.Explain"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_grid_gray_edit"
                        android:hint="最低价"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingTop="4dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@drawable/tv_select_text"
                        android:textSize="12sp" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/gray" />

                    <EditText
                        android:id="@+id/et_price_to"
                        style="@style/TextStyle.Explain"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_grid_gray_edit"
                        android:hint="最高价"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingTop="4dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@drawable/tv_select_text"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="一级分类" />

                <com.goldze.common.dmvvm.widget.stackLabel.StackLabel
                    android:id="@+id/sl_class_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:deleteButton="false"
                    app:itemMargin="4dp"
                    app:labelBackground="@drawable/bg_grid_white_unselect"
                    app:maxSelectNum="1"
                    app:selectBackground="@drawable/bg_grid_white_select"
                    app:selectMode="true"
                    app:selectTextColor="#FFFFFF"
                    app:textColor="#5F5F5F"
                    app:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/TextStyle_14"
                        android:layout_gravity="start"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="二级分类" />

                    <com.goldze.common.dmvvm.widget.stackLabel.StackLabel
                        android:id="@+id/sl_class_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:deleteButton="false"
                        app:itemMargin="4dp"
                        app:labelBackground="@drawable/bg_grid_white_unselect"
                        app:maxSelectNum="1"
                        app:selectBackground="@drawable/bg_grid_white_select"
                        app:selectMode="true"
                        app:selectTextColor="#FFFFFF"
                        app:textColor="#5F5F5F"
                        app:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/TextStyle_14"
                        android:layout_gravity="start"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="三级分类" />

                    <com.goldze.common.dmvvm.widget.stackLabel.StackLabel
                        android:id="@+id/sl_class_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:deleteButton="false"
                        app:itemMargin="4dp"
                        app:labelBackground="@drawable/bg_grid_white_unselect"
                        app:maxSelectNum="99"
                        app:selectBackground="@drawable/bg_grid_white_select"
                        app:selectMode="true"
                        app:selectTextColor="#FFFFFF"
                        app:textColor="#5F5F5F"
                        app:textSize="12sp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="商品属在地"
                    android:textSize="@dimen/text_14" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_grid_gray_edit">

                    <Spinner
                        android:id="@+id/spinner_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="42dp"
                        android:spinnerMode="dropdown" />

                </FrameLayout>


                <View style="@style/HorizontalLine" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="商品类型" />

                <com.goldze.common.dmvvm.widget.stackLabel.StackLabel
                    android:id="@+id/sl_good_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:deleteButton="false"
                    app:itemMargin="4dp"
                    app:labelBackground="@drawable/bg_grid_white_unselect"
                    app:maxSelectNum="99"
                    app:selectBackground="@drawable/bg_grid_white_select"
                    app:selectMode="true"
                    app:selectTextColor="#FFFFFF"
                    app:textColor="#5F5F5F"
                    app:textSize="12sp" />

                <View style="@style/HorizontalLine" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="店铺类型" />

                <com.goldze.common.dmvvm.widget.stackLabel.StackLabel
                    android:id="@+id/sl_shop_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:deleteButton="false"
                    app:itemMargin="4dp"
                    app:labelBackground="@drawable/bg_grid_white_unselect"
                    app:maxSelectNum="99"
                    app:selectBackground="@drawable/bg_grid_white_select"
                    app:selectMode="true"
                    app:selectTextColor="#FFFFFF"
                    app:textColor="#5F5F5F"
                    app:textSize="12sp" />

                <View style="@style/HorizontalLine" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="店铺服务" />

                <com.goldze.common.dmvvm.widget.stackLabel.StackLabel
                    android:id="@+id/sl_shop_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:deleteButton="false"
                    app:itemMargin="4dp"
                    app:labelBackground="@drawable/bg_grid_white_unselect"
                    app:maxSelectNum="99"
                    app:selectBackground="@drawable/bg_grid_white_select"
                    app:selectMode="true"
                    app:selectTextColor="#FFFFFF"
                    app:textColor="#5F5F5F"
                    app:textSize="12sp" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_color" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:background="@drawable/button_shape_red"
            android:text="筛选商品"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>