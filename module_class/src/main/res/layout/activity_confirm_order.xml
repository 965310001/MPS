<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_height"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="收货人：姓名 1891011101" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="北京	北京市	东城区114645" />
                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher" />


            </RelativeLayout>

            <!--<com.leon.lib.settingview.LSettingItem-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <com.goldze.common.dmvvm.widget.MultipleItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                leon:leftText="支付方式"
                leon:ptleftIcon="@drawable/ic_launcher"
                leon:rightText="在线付款"
                leon:showBottomLine="false"
                leon:showLeftIcon="false"
                leon:showRightIcon="true"
                leon:showTopLine="false" />

            <com.goldze.common.dmvvm.widget.MultipleItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                leon:leftText="发票信息"
                leon:ptleftIcon="@drawable/ic_launcher"
                leon:rightText="不需要发票"
                leon:showBottomLine="false"
                leon:showLeftIcon="false"
                leon:showRightIcon="true"
                leon:showTopLine="false" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/blue"></RelativeLayout>

            <com.goldze.common.dmvvm.widget.MultipleItemView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                leon:leftText="物流配送"
                leon:ptleftIcon="@drawable/ic_launcher"
                leon:rightText="运费0.00元"
                leon:showBottomLine="false"
                leon:showLeftIcon="false"
                leon:showRightIcon="false"
                leon:showTopLine="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:hint="店铺订单留言"
                android:padding="@dimen/dp_10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:padding="@dimen/dp_10"
                android:text="本地合计333.0元" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:background="@color/blue"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/shallow_red"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:text="提交订单"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="120dp"
                android:text="合计总金额：￥333.00" />
        </RelativeLayout>
    </RelativeLayout>
</layout>