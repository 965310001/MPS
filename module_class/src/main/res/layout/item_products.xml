<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.mingpinmall.classz.ui.vm.bean.GoodsInfo" />

        <variable
            name="data"
            type="GoodsInfo" />
    </data>

    <android.support.v7.widget.CardView
        style="@style/width_match_height_warp"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/gray"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:contentPadding="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="93dp"
                android:layout_height="103dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:onClick="@{(view)->data.onclick(view,data)}"
                android:src="@{data.goods_image_url}"
                tools:srcCompat="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/iv_icon"
                android:maxLines="2"
                android:onClick="@{(view)->data.click(view)}"
                android:text="@{data.goods_name}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                tools:text="textview" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_toEndOf="@+id/iv_icon"
                android:text="@{@string/price_holder(data.goods_price)}"
                android:textColor="@color/shallow_red"
                android:textSize="@dimen/text_16"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tv_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_icon"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/iv_icon"
                android:text="@{@string/salenum_holder(data.goods_salenum)}"
                android:textColor="@color/gray"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tv_num"
                style="@style/TextStyle_12"
                android:layout_alignTop="@+id/tv_evaluation"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="93dp"
                android:visibility="gone"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tv_brand"
                style="@style/TextStyle_12"
                android:layout_alignTop="@+id/tv_evaluation"
                android:layout_alignParentEnd="true"
                android:text="@{data.store_name}"
                tools:text="TextView" />

            <!--<ImageView-->
            <!--android:id="@+id/iv_add_cart"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBottom="@+id/iv_icon"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--app:srcCompat="@drawable/icon_check_true" />-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>