<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.mingpinmall.classz.ui.vm.bean.GoodsInfo" />

        <variable
            name="data"
            type="java.util.List&lt;GoodsInfo>" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                src="@{data.get(0).goods_image_url}"
                android:layout_width="@dimen/image_height_big"
                android:layout_height="@dimen/image_height_big"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{`已售`+data[0].evaluation_count}"
                    tools:text="已售2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/price_holder(data[0].goods_price)}"
                    android:textColor="@color/shallow_red"
                    android:textSize="@dimen/text_16"
                    tools:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    src="@{data.get(1).goods_image_url}"
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_height"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`已售`+data.get(1).evaluation_count}"
                    tools:text="已售2" />

                <ImageView
                    src="@{data.get(2).goods_image_url}"
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_height"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`已售`+data.get(2).evaluation_count}"
                    tools:text="已售2" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>