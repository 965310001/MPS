<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:alpha="0.8"
            android:background="@color/color_33000000" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <include layout="@layout/item_title_layout" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="价格区间"
                    android:textSize="@dimen/text_14" />

                <!--<com.xuexiang.xui.widget.flowlayout.FlowTagLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--areaId, priceFrom, priceTo-->
                    <EditText
                        android:id="@+id/et_price_from"
                        style="@style/TextStyle.Explain"
                        android:layout_height="32dp"
                        android:layout_marginStart="?attr/xui_config_content_spacing_horizontal"
                        android:background="@drawable/bg_rect_round_gray"
                        android:hint="最低价"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/tv_select_text"
                        android:textSize="@dimen/text_14" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/gray" />

                    <EditText
                        android:id="@+id/et_price_to"
                        style="@style/TextStyle.Explain"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_rect_round_gray"
                        android:hint="最高价"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/tv_select_text"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


                <!--</com.xuexiang.xui.widget.flowlayout.FlowTagLayout>-->

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="商品属在地"
                    android:textSize="@dimen/text_14" />

                <Spinner
                    android:id="@+id/spinner_system"
                    style="@style/SpinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="?attr/xui_config_content_spacing_vertical"
                    android:spinnerMode="dialog" />

                <View style="@style/HorizontalLine" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="商品类型" />

                <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
                    android:id="@+id/ftl_good_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View style="@style/HorizontalLine" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="店铺类型" />

                <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
                    android:id="@+id/ftl_shop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" />

                <View style="@style/HorizontalLine" />

                <TextView
                    style="@style/TextStyle_14"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="店铺服务" />

                <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
                    android:id="@+id/ftl_shop_server"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" />

                <View style="@style/HorizontalLine" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/shallow_red"
                    android:text="筛选商品"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <com.xuexiang.xui.widget.button.ButtonView
                    style="@style/ButtonView.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="筛选商品"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F4F4F4"
                    android:text="重置"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_14" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/shallow_red"
                    android:onClick="onClick"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>