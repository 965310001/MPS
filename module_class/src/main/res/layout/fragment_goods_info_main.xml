<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.mingpinmall.classz.ui.vm.bean.GoodsInfo" />

        <variable
            name="list"
            type="java.util.List" />

    </data>

    <com.goldze.common.dmvvm.widget.SlideLayout
        android:id="@+id/sv_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.details.GoodsInfoMainFragment">

        <!--嵌套使用了RecycleView 解决加载不全问题 使用NestedScrollView-->
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_goods_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/content_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--商品图片 轮播-->
                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/vp_item_goods_img"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@color/white"
                    leon:canLoop="true" />

                <View style="@style/HorizontalLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!--商品名称-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:onClick="favorites"
                            android:src="@{data.isfavorate?@drawable/ic_me_favorite:@drawable/ic_me_favorite_red}"
                            android:tint="@color/shallow_red" />

                        <TextView
                            android:id="@+id/tv_goods_name"
                            style="@style/TextStyle"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@id/iv_like"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="2"
                            android:paddingRight="@dimen/dp_10"
                            android:text="@{data.goods_name}"
                            tools:text="正品瑞士邦顿(Bestdon)手表BD7108G男士大表盘全自动针机械表精钢军表夜光防水户外运动腕表" />

                    </RelativeLayout>

                    <!--商品价格-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_goods_price"
                            style="@style/TextStyle"
                            android:layout_alignParentBottom="true"
                            android:text="@{String.format(@string/price_holder,data.goods_price)}"
                            android:textColor="@color/shallow_red"
                            android:textSize="@dimen/dp_20"
                            tools:text="￥599.00" />

                        <TextView
                            android:id="@+id/tv_goods_num"
                            style="@style/TextStyle"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="@{String.format(@string/salenum_holder,data.goods_salenum)}"
                            android:textSize="@dimen/text_14"
                            tools:text="销量：0件" />

                        <com.goldze.common.dmvvm.widget.CountClickView
                            android:id="@+id/ccv_click"
                            currcount="@{String.valueOf(`1`)}"
                            maxcount="@{String.valueOf(data.num)}"
                            mincount="@{String.valueOf(`1`)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/lsi_goods_specification"
                    style="@style/width_match_height_warp"
                    android:layout_height="@dimen/dp_40"
                    leon:LtextColor="@color/black"
                    leon:LtextSize="12"
                    leon:isShowRightText="false"
                    leon:leftIconSize="@dimen/image_height_litter"
                    leon:leftText="已选：默认"
                    leon:rightText="更多"
                    leon:rightTextColor="@color/gray"
                    leon:rightTextSize="8" />

                <!-- 商品保障图 -->
                <View style="@style/HorizontalLine" />

                <TextView
                    android:id="@+id/tv_ensure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:visibility="gone"
                    tools:text="说明：质保3年" />

                <!--评论-->
                <include layout="@layout/market_fragment_goods_comment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f"
                    android:orientation="vertical">

                    <com.leon.lib.settingview.LSettingItem
                        android:id="@+id/lsi_item"
                        style="@style/width_match_height_warp"
                        android:layout_height="@dimen/dp_40"
                        leon:LtextColor="@color/black"
                        leon:LtextSize="12"
                        leon:isShowRightText="false"
                        leon:leftIconSize="@dimen/image_height_litter"
                        leon:rightText="更多"
                        leon:rightTextColor="@color/gray"
                        leon:rightTextSize="8" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 店主推荐 -->
                <LinearLayout
                    android:id="@+id/ll_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:text="店铺推荐"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/vp_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="264dp"
                        android:visibility="gone"
                        leon:canLoop="true" />

                    <include
                        android:id="@+id/recycle_recommend_view"
                        layout="@layout/recyclerview_base"
                        android:visibility="gone" />

                    <include
                        layout="@layout/trecyclerview_base"
                        bind:data="@{list}"
                        bind:tag='@{"4"}' />
                </LinearLayout>


                <!-- 上拉查看图文详情 -->
                <LinearLayout
                    android:id="@+id/ll_pull_up"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="9dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/market_top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="上拉查看图文详情"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.goldze.common.dmvvm.widget.SlideLayout>
</layout>