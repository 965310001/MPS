<resources>

    <!-- popwindow动画 -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_arrow_in</item>
        <item name="android:windowExitAnimation">@anim/pop_arrow_out</item>
    </style>

    <!-- popwindow动画,仅透明 -->
    <style name="popwin_anim_style_alpha">
        <item name="android:windowEnterAnimation">@anim/pop_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/pop_alpha_out</item>
    </style>

    <!--筛选动画-->
    <style name="popwinscreening_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_right_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_out</item>
    </style>

    <style name="AnimSheetBottom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <style name="filterTextStyle">
        <item name="android:textColor">@drawable/sel_filter_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="filterImageStyle">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_toRightOf">@+id/filter_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <declare-styleable name="FilterTab">
        <attr name="filterText" format="string" />
        <attr name="isImage" format="boolean" />
        <attr name="isSelect" format="boolean" />
    </declare-styleable>
</resources>
