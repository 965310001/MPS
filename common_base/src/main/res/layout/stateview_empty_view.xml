<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_error_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minWidth="@dimen/dp_140"
        android:minHeight="@dimen/dp_140"
        android:src="@drawable/stateview_empty_server" />

    <TextView
        android:id="@+id/tv_error_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_error_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="网络不给力～_~"
        android:textColor="@color/black"
        android:textSize="20sp"  />
</RelativeLayout>