<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="data"
            type="com.mingpinmall.apppay.pay.PayLayoutBean.PayInfoBean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/ll_payContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本次交易需要在线支付"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="@{data.pay_amount}"
                        android:textColor="#d61619"
                        android:textSize="22sp"
                        tools:text="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#000"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:id="@+id/line_top"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="16dp"
                    android:background="#e8e8e8"
                    app:layout_constraintTop_toBottomOf="@id/ll_top" />

                <LinearLayout
                    android:id="@+id/ll_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/line_top">

                    <FrameLayout
                        android:id="@+id/fl_payCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/bg_foreground"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:background="#e8e8e8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.goldze.common.dmvvm.widget.SmoothCheckBox
                                android:id="@+id/scb_pcard"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="使用充值卡支付"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_tips_pcd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:text="余额不足"
                                android:textColor="@color/app_theme_d61619"
                                android:textSize="13sp"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可用充值卡余额 ¥"
                                android:textColor="#333"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:text="@{data.member_available_rcb}"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:text="99.92" />

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_payMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/bg_foreground"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:background="#e8e8e8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.goldze.common.dmvvm.widget.SmoothCheckBox
                                android:id="@+id/scb_pmoney"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="使用预存款支付"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_tips_pd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:text="余额不足"
                                android:textColor="@color/app_theme_d61619"
                                android:textSize="13sp"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可用预存款余额 ¥"
                                android:textColor="#333"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:text="@{data.member_available_pd}"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:text="99.92" />

                        </LinearLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_psd"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="44dp"
                            android:text="输入支付密码"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/ed_password"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_marginStart="18dp"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center_vertical"
                            android:inputType="numberPassword"
                            android:minWidth="200dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:singleLine="true" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="其他支付方式"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_center" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp"
                    android:background="#e8e8e8"
                    app:layout_constraintBottom_toBottomOf="@id/tv_tips"
                    app:layout_constraintEnd_toStartOf="@id/tv_tips"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_tips" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="20dp"
                    android:background="#e8e8e8"
                    app:layout_constraintBottom_toBottomOf="@id/tv_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_tips"
                    app:layout_constraintTop_toTopOf="@id/tv_tips" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tips">

                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.5"
                        android:src="@drawable/alipay"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv_wechat"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_tips"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_wechat"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.5"
                        android:src="@drawable/wxpay"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_alipay"
                        app:layout_constraintTop_toBottomOf="@id/tv_tips"
                        tools:visibility="visible" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="20dp"
                android:background="@drawable/button_shape"
                android:text="确认支付"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_alipay" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fl_stateContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#CEFFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ll_payContent"
            app:layout_constraintTop_toTopOf="@id/ll_payContent">

            <com.goldze.common.dmvvm.widget.progress.CustomStatusView
                android:id="@+id/csv_status"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="6dp"
                app:load_failure_color="@color/app_theme_d61619"
                app:load_success_color="@color/blue"
                app:loading_color="@color/black"
                app:progress_radius="@dimen/dp_40"
                app:progress_width="@dimen/dp_4" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="等待支付结果" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</layout>