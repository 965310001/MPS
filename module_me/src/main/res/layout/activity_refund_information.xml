<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.mingpinmall.me.ui.bean.RefundInformation" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="我的退款申请"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.refund_sn}"
                app:title="退款编号" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.reason_info}"
                app:title="退款原因" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.refund_amount}"
                app:title="退款金额" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.buyer_message}"
                app:title="退款说明" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle=""
                app:title="凭证上传" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="商家退款处理"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle=""
                app:title="审核状态" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.seller_message}"
                app:title="商家备注" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="商城退款审核"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.admin_state}"
                app:title="平台确认" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.refund.admin_message}"
                app:title="平台备注" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="退款详细"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.detail_array.refund_code}"
                app:title="支付方式" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.detail_array.pay_amount}"
                app:title="在线退款金额" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.detail_array.pd_amount}"
                app:title="预存款返回金额" />

            <com.mingpinmall.me.ui.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mode="NoLeftImage_NoMoreIcon_NoDescription"
                app:subTitle="@{data.detail_array.rcb_amount}"
                app:title="充值卡返还金额" />

            <Space
                android:layout_width="1px"
                android:layout_height="20dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>