<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="12dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                app:layout_constraintEnd_toStartOf="@id/tv_goodsName"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/mcc_06_b" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/tv_tips"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/iv_image"
                app:layout_constraintTop_toTopOf="@id/iv_image"
                app:layout_constraintVertical_bias="0"
                tools:text="测试商品" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_evaluate"
                android:textColor="#888"
                app:layout_constraintBottom_toBottomOf="@id/iv_image"
                app:layout_constraintStart_toStartOf="@id/tv_goodsName" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_evaluate"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:minWidth="32dp"
                android:minHeight="32dp"
                android:numStars="5"
                android:stepSize="1"
                app:layout_constraintBottom_toBottomOf="@id/tv_tips"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_tips"
                app:layout_constraintTop_toTopOf="@id/tv_tips"
                app:mrb_progressTint="@color/app_theme_d61619" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/ed_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_edittext_default"
                android:gravity="top"
                android:hint="@string/hint_text_evaluate"
                android:minHeight="46dp"
                android:padding="12dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/ck_anonymity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rb_evaluate" />

            <com.goldze.common.dmvvm.widget.SmoothCheckBox
                android:id="@+id/ck_anonymity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ed_content"
                app:layout_constraintTop_toTopOf="@id/ed_content" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_anonymity"
                app:layout_constraintEnd_toEndOf="@id/ck_anonymity"
                app:layout_constraintStart_toStartOf="@id/ck_anonymity"
                app:layout_constraintTop_toBottomOf="@id/ck_anonymity" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_camera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="12dp"
                app:layout_constraintBottom_toTopOf="@id/tv_tips0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_content"
                app:srcCompat="@drawable/ic_camera" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_tips0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/text_showPic"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/iv_camera"
                app:layout_constraintStart_toStartOf="@id/iv_camera"
                app:layout_constraintTop_toBottomOf="@id/iv_camera"
                app:layout_constraintVertical_bias="0" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_show0"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/shape_transparent_grid"
                app:layout_constraintBottom_toBottomOf="@id/tv_tips0"
                app:layout_constraintEnd_toStartOf="@id/iv_show1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/iv_camera"
                app:layout_constraintTop_toTopOf="@id/iv_camera"
                app:srcCompat="@drawable/ic_evaluate_addpic" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_show1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_transparent_grid"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/iv_show0"
                app:layout_constraintEnd_toStartOf="@id/iv_show2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/iv_show0"
                app:layout_constraintTop_toTopOf="@id/iv_show0"
                app:srcCompat="@drawable/ic_evaluate_addpic"
                tools:visibility="visible" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_show2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_transparent_grid"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/iv_show0"
                app:layout_constraintEnd_toStartOf="@id/iv_show3"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/iv_show1"
                app:layout_constraintTop_toTopOf="@id/iv_show0"
                app:srcCompat="@drawable/ic_evaluate_addpic"
                tools:visibility="visible" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_show3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_transparent_grid"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/iv_show0"
                app:layout_constraintEnd_toStartOf="@id/iv_show4"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/iv_show2"
                app:layout_constraintTop_toTopOf="@id/iv_show0"
                app:srcCompat="@drawable/ic_evaluate_addpic"
                tools:visibility="visible" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_show4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/shape_transparent_grid"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/iv_show0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/iv_show3"
                app:layout_constraintTop_toTopOf="@id/iv_show0"
                app:srcCompat="@drawable/ic_evaluate_addpic"
                tools:visibility="visible" />

        </android.support.constraint.ConstraintLayout>

        <Space
            android:layout_width="1px"
            android:layout_height="12dp" />

    </LinearLayout>
</layout>