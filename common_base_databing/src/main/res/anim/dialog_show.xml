<?xml version="1.0" encoding="utf-8"?><!-- 弹出时动画 -->
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="90"
        android:fromAlpha="0.2"
        android:toAlpha="1" />

    <scale
        android:duration="135"
        android:fromXScale="0.7"
        android:fromYScale="0.7"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

</set>